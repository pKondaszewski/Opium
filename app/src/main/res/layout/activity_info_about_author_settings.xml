<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TableRow>
                <TextView
                    style="@style/TextViewH2"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="@string/info_about_author_author"/>
            </TableRow>
            <TableRow>
                <TextView
                    style="@style/TextViewH3"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="0.1"
                    android:text="@string/info_about_author_name"
                    android:gravity="end"/>
            </TableRow>
            <TableRow>
                <TextView
                    style="@style/TextViewH2"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="@string/info_about_author_contact"/>
            </TableRow>
            <TableRow>
                <TextView
                    style="@style/TextViewH3"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="0.1"
                    android:text="kondaszewskiprz@gmail.com"
                    android:gravity="end"/>
            </TableRow>
            <TableRow>
                <TextView
                    style="@style/TextViewH2"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Github"/>
            </TableRow>
            <TableRow>
                <TextView
                    style="@style/TextViewH3"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="0.1"
                    android:text="https://github.com/pKondaszewski"
                    android:autoLink="web"
                    android:linksClickable="true"
                    android:gravity="end"/>
            </TableRow>
            <TableRow>
                <TextView
                    style="@style/TextViewH2"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="LinkedIn"/>
            </TableRow>
            <TableRow>
                <TextView
                    style="@style/TextViewH3"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="0.1"
                    android:text="linkedin.com/in/przemysÅ‚aw-kondaszewski-366647244/"
                    android:autoLink="web"
                    android:linksClickable="true"
                    android:gravity="end"/>
            </TableRow>
        </TableLayout>
        <LinearLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="149dp"
                android:layout_height="170dp"
                app:srcCompat="@drawable/opium"/>
            <TextView
                style="@style/TextViewH2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Opium 1.0"/>
            <TextView
                style="@style/TextViewH3"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_gravity="center_horizontal|center"
                android:text="GNU General Public License v2.0"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>