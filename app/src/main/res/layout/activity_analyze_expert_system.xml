<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_view_expert_system_user_movement_result_label"
                style="@style/TextViewH2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User movement result (1-4)"/>
            <TextView
                android:id="@+id/text_view_expert_system_user_movement_result_value"
                style="@style/TextViewH3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="end"
                android:text="2.8"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_view_expert_system_location_result_label"
                style="@style/TextViewH3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location processor result (1-4)"/>
            <TextView
                android:id="@+id/text_view_expert_system_location_result_value"
                style="@style/TextViewH3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="end"
                android:text="2.8"/>
        </LinearLayout>
        <TextView
            android:id="@+id/text_view_expert_system_user_movement_description"
            style="@style/TextViewH3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginVertical="15dp"
            android:text="Opis na temat user movement"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_view_expert_system_fitbit_result_label"
                style="@style/TextViewH2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fitbit result (1-4)"/>
            <TextView
                android:id="@+id/text_view_expert_system_fitbit_result_value"
                style="@style/TextViewH3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="end"
                android:text="2.8"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_view_expert_fitbit_steps_result_label"
                style="@style/TextViewH3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fitbit steps processor result (1-4)"/>
            <TextView
                android:id="@+id/text_view_expert_fitbit_steps_result_value"
                style="@style/TextViewH3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="end"
                android:text="2.8"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_view_expert_fitbit_spo2_result_label"
                style="@style/TextViewH3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fitbit spo2 processor result (1-4)"/>
            <TextView
                android:id="@+id/text_view_expert_fitbit_spo2_result_value"
                style="@style/TextViewH3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="end"
                android:text="2.8"/>
        </LinearLayout>
        <TextView
            android:id="@+id/text_view_expert_system_fitbit_description"
            style="@style/TextViewH3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginVertical="15dp"
            android:text="Opis na temat user movement"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_view_expert_system_user_feelings_result_label"
                style="@style/TextViewH2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User feelings result (1-4)"/>
            <TextView
                android:id="@+id/text_view_expert_system_user_feelings_result_value"
                style="@style/TextViewH3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="end"
                android:text="2.8"/>
        </LinearLayout>
        <TextView
            android:id="@+id/text_view_expert_system_user_feelings_description"
            style="@style/TextViewH3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginTop="15dp"
            android:text="Opis na temat user movement"/>
        <LinearLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center"
            android:orientation="vertical">
            <Button
                android:id="@+id/button_launch_expert_system"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/launch_expert_system_label"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>