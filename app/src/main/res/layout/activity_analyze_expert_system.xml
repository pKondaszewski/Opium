<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/button_launch_expert_system"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/launch_expert_system_label"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_view_expert_system_user_movement_result_label"
                    style="@style/TextViewH2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/expert_system_user_movement_result_label_text_view"/>
                <TextView
                    android:id="@+id/text_view_expert_system_user_movement_result_value"
                    style="@style/TextViewH3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:gravity="end"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_view_expert_system_location_result_label"
                    style="@style/TextViewH3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/expert_system_location_result_label_text_view"/>
                <TextView
                    android:id="@+id/text_view_expert_system_location_result_value"
                    style="@style/TextViewH3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:gravity="end"/>
            </LinearLayout>
            <TextView
                android:id="@+id/text_view_expert_system_user_movement_description"
                style="@style/TextViewH3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:text="@string/expert_system_user_movement_description"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_view_expert_system_user_feelings_result_label"
                    style="@style/TextViewH2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/expert_system_user_feelings_result_label_text_view"/>
                <TextView
                    android:id="@+id/text_view_expert_system_user_feelings_result_value"
                    style="@style/TextViewH3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:gravity="end"/>
            </LinearLayout>
            <TextView
                android:id="@+id/text_view_expert_system_user_feelings_description"
                style="@style/TextViewH3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/expert_system_user_feelings_description"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_view_expert_system_fitbit_result_label"
                    style="@style/TextViewH2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/expert_system_fitbit_result_label_text_view"
                    android:visibility="invisible"/>
                <TextView
                    android:id="@+id/text_view_expert_system_fitbit_result_value"
                    style="@style/TextViewH3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:gravity="end"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_view_expert_fitbit_steps_result_label"
                    style="@style/TextViewH3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/expert_fitbit_steps_result_label_text_view"
                    android:visibility="invisible"/>
                <TextView
                    android:id="@+id/text_view_expert_fitbit_steps_result_value"
                    style="@style/TextViewH3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:gravity="end"
                    android:visibility="invisible"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text_view_expert_fitbit_spo2_result_label"
                    style="@style/TextViewH3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/expert_fitbit_spo2_result_label_text_view"
                    android:visibility="invisible"/>
                <TextView
                    android:id="@+id/text_view_expert_fitbit_spo2_result_value"
                    style="@style/TextViewH3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:gravity="end"
                    android:visibility="invisible"/>
            </LinearLayout>
            <TextView
                android:id="@+id/text_view_expert_system_fitbit_description"
                style="@style/TextViewH3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:text="@string/expert_system_fitbit_description"
                android:visibility="invisible"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>