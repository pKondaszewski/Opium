<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text_view_mood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:text="@string/mood_text_view"
            android:textSize="24sp"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/linear_layout_mood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <co.ankurg.expressview.ExpressView
                    android:id="@+id/button_great_mood"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:burstColor="@color/green"
                    app:checkedIcon="@drawable/great_mood_emoji"
                    app:checkedIconTint="@color/green"
                    app:uncheckedIcon="@drawable/great_mood_emoji">

                    <TextView
                        android:id="@+id/text_view_great_mood"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contextClickable="false"
                        android:gravity="center_horizontal"
                        android:text="@string/mood_greatFeelings_radio_button" />
                </co.ankurg.expressview.ExpressView>

                <co.ankurg.expressview.ExpressView
                    android:id="@+id/button_good_mood"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:burstColor="@color/light_green"
                    app:checkedIcon="@drawable/good_mood_emoji"
                    app:checkedIconTint="@color/light_green"
                    app:uncheckedIcon="@drawable/good_mood_emoji">

                    <TextView
                        android:id="@+id/text_view_good_mood"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/mood_goodFeelings_radio_button" />
                </co.ankurg.expressview.ExpressView>

                <co.ankurg.expressview.ExpressView
                    android:id="@+id/button_ok_mood"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:burstColor="@color/yellow"
                    app:checkedIcon="@drawable/ok_mood_emoji"
                    app:checkedIconTint="@color/yellow"
                    app:uncheckedIcon="@drawable/ok_mood_emoji">

                    <TextView
                        android:id="@+id/text_view_ok_mood"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/mood_okFeelings_radio_button" />
                </co.ankurg.expressview.ExpressView>

                <co.ankurg.expressview.ExpressView
                    android:id="@+id/button_bad_mood"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:burstColor="@color/orange"
                    app:checkedIcon="@drawable/bad_mood_emoji"
                    app:checkedIconTint="@color/orange"
                    app:uncheckedIcon="@drawable/bad_mood_emoji">

                    <TextView
                        android:id="@+id/text_view_bad_mood"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/mood_badFeelings_radio_button" />
                </co.ankurg.expressview.ExpressView>

                <co.ankurg.expressview.ExpressView
                    android:id="@+id/button_tragic_mood"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:checkedIcon="@drawable/tragic_mood_emoji"
                    app:uncheckedIcon="@drawable/tragic_mood_emoji">

                    <TextView
                        android:id="@+id/text_view_tragic_mood"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/mood_tragicFeelings_radio_button" />
                </co.ankurg.expressview.ExpressView>
            </LinearLayout>
        </HorizontalScrollView>
        <TextView
            android:id="@+id/text_view_ailments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="@string/ailments_text_view"
            android:textSize="24sp"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <co.ankurg.expressview.ExpressView
                    android:id="@+id/button_fever_ailments"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:burstColor="@color/palevioletred"
                    app:checkedIcon="@drawable/fever_ailments_emoji"
                    app:checkedIconTint="@color/palevioletred"
                    app:uncheckedIcon="@drawable/fever_ailments_emoji">

                    <TextView
                        android:id="@+id/text_view_fever_ailments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/ailments_fever_button" />
                </co.ankurg.expressview.ExpressView>

                <co.ankurg.expressview.ExpressView
                    android:id="@+id/button_cold_ailments"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:burstColor="@color/light_blue_400"
                    app:checkedIcon="@drawable/flu_ailments_emoji"
                    app:checkedIconTint="@color/light_blue_400"
                    app:uncheckedIcon="@drawable/flu_ailments_emoji">

                    <TextView
                        android:id="@+id/text_view_cold_ailments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/ailments_flu_button" />
                </co.ankurg.expressview.ExpressView>

                <co.ankurg.expressview.ExpressView
                    android:id="@+id/button_cough_ailments"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:burstColor="@color/purple_200"
                    app:checkedIcon="@drawable/cough_ailments_emoji"
                    app:checkedIconTint="@color/purple_200"
                    app:uncheckedIcon="@drawable/cough_ailments_emoji">

                    <TextView
                        android:id="@+id/text_view_cough_ailments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/ailments_cough_button" />
                </co.ankurg.expressview.ExpressView>

                <co.ankurg.expressview.ExpressView
                    android:id="@+id/button_lethargy_ailments"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:burstColor="@color/ecru"
                    app:checkedIcon="@drawable/yawning_ailments_emoji"
                    app:checkedIconTint="@color/ecru"
                    app:uncheckedIcon="@drawable/yawning_ailments_emoji">

                    <TextView
                        android:id="@+id/text_view_lethargy_ailments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/ailments_lethargy_button" />
                </co.ankurg.expressview.ExpressView>

                <co.ankurg.expressview.ExpressView
                    android:id="@+id/button_sore_throat_ailments"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:burstColor="@color/dark_orange"
                    app:checkedIcon="@drawable/sore_throat_ailments_emoji"
                    app:checkedIconTint="@color/dark_orange"
                    app:uncheckedIcon="@drawable/sore_throat_ailments_emoji">

                    <TextView
                        android:id="@+id/text_view_sore_throat_ailments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/ailments_sore_throat_button" />
                </co.ankurg.expressview.ExpressView>

                <co.ankurg.expressview.ExpressView
                    android:id="@+id/button_headache_ailments"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:burstColor="@color/dark_red"
                    app:checkedIcon="@drawable/headache_ailments_emoji"
                    app:checkedIconTint="@color/dark_red"
                    app:uncheckedIcon="@drawable/headache_ailments_emoji">

                    <TextView
                        android:id="@+id/text_view_headache_ailments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/ailments_headache_button" />
                </co.ankurg.expressview.ExpressView>

                <co.ankurg.expressview.ExpressView
                    android:id="@+id/button_vomiting_ailments"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:burstColor="@color/dark_green"
                    app:checkedIcon="@drawable/vomiting_ailments_emoji"
                    app:checkedIconTint="@color/dark_green"
                    app:uncheckedIcon="@drawable/vomiting_ailments_emoji">

                    <TextView
                        android:id="@+id/text_view_vomiting_ailments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/ailments_vomiting_button" />
                </co.ankurg.expressview.ExpressView>

                <co.ankurg.expressview.ExpressView
                    android:id="@+id/button_diarrhea_ailments"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:burstColor="@color/white"
                    app:checkedIcon="@drawable/diarrhea_ailments_emoji"
                    app:checkedIconTint="@color/white"
                    app:uncheckedIcon="@drawable/diarrhea_ailments_emoji">

                    <TextView
                        android:id="@+id/text_view_diarrhea_ailments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/ailments_diarrhea_button" />
                </co.ankurg.expressview.ExpressView>

                <co.ankurg.expressview.ExpressView
                    android:id="@+id/button_other_ailments"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:burstColor="@color/dark_red"
                    app:checkedIcon="@drawable/other_ailments_emoji"
                    app:checkedIconTint="@color/dark_red"
                    app:uncheckedIcon="@drawable/other_ailments_emoji">

                    <TextView
                        android:id="@+id/text_view_other_ailments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/ailments_other_button" />
                </co.ankurg.expressview.ExpressView>
            </LinearLayout>
        </HorizontalScrollView>
        <LinearLayout
            android:id="@+id/linear_layout_other_ailments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="15sp"/>
        <TextView
            android:id="@+id/text_view_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="@string/note_text_view"
            android:textSize="24sp"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_note_text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom|center"
            android:orientation="vertical">
            <Button
                android:id="@+id/button_apply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:text="@string/apply_button"
                android:visibility="invisible"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>